<div class="card app-card">
  <div class="card-body">
    <h5 class="card-title">
      <%= @item[:title] %>
    </h5>
    <% if @item[:subtitle] %>
      <h6 class="card-subtitle mb-2 text-muted">
        <%= @item[:subtitle] %>
      </h6>
    <% end %>
    <%= yield %>
  </div>
  <div class="card-footer--button">
    <a href="<%= @item[:path] %>" class="card-link btn btn-primary">
      Go!
    </a>
  </div>
</div>
