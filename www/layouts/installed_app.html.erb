<div class="card app-card">
  <span class="fa-card-img fa fa-4x fa-<%= @item[:fa_icon] || 'bars' %>"></span>
  <div class="card-body d-flex flex-column">
    <h5 class="card-title">
      <%= @item[:title] %>
    </h5>
    <% if @item[:subtitle] %>
      <h6 class="card-subtitle mb-2 text-muted">
        <%= @item[:subtitle] %>
      </h6>
    <% end %>
    <%= yield %>
    <div class="mt-auto">
      <a href="<%= @item[:path] %>" class="card-link btn btn-primary btn-block">
        Go!
      </a>
    </div>
  </div>
</div>
