<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
    <% if branding('brandbar.logo') %>
      <a
        class="navbar-brand"
        href="/">
        <img
          class="<%= branding('brandbar.logo.classNames') %> branding-brandbar-logo"
          src="<%= branding('brandbar.logo.url') %>"
          alt="<%= branding('brandbar.logo.alt') %>"
        >
        </img>
      </a>
    <% else %>
      <a
        class="navbar-brand"
        href="/">
        <img
          class="<%= branding('brandbar.logo.classNames') %> branding-brandbar-logo"
          src="/images/png_trans_logo-navbar.png"
          alt="openflightHPC Logo"
          height="75">
        </img>
      </a>
    <% end %>
    <% if text = branding('brandbar.text') %>
      <div class="branding-brandbar-text-wrapper">
        <span class="branding-brandbar-text">
          <%= text %>
        </span>
      </div>
    <% end %>

    <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNavDropdown"
        aria-controls="navbar SupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
        >
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav mr-auto">
            <% unless app_items.empty? %>
              <li class="nav-item">
                  <a
                      class="nav-link nav-menu-button"
                      href="#apps"
                  >
                      Tools
                  </a>
              </li>
            <% end %>
        </ul>
    </div>
</nav>
