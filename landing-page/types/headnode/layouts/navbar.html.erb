<nav class="navbar navbar-expand-lg navbar-light bg-white">
    <% if branding('brandbar.logo') %>
      <a
        class="navbar-brand"
        href="/">
        <img
          class="<%= branding('brandbar.logo.classNames') %> branding-brandbar-logo"
          src="<%= branding('brandbar.logo.url') %>"
          alt="<%= branding('brandbar.logo.alt') %>"
        >
        </img>
      </a>
    <% else %>
      <a
        class="navbar-brand"
        href="/">
        <img
          class="<%= branding('brandbar.logo.classNames') %> branding-brandbar-logo"
          src="/images/png_trans_logo-navbar.png"
          alt="openflightHPC Logo"
          height="75">
        </img>
      </a>
    <% end %>

    <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNavDropdown"
        aria-controls="navbar SupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
        >
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a
                    class="nav-link nav-menu-button"
                    href="/"
                >
                <%=
                    branding('brandbar.home_link_text') ||
                      environment('environment.name') ||
                      environment('organisation.name') ||
                      'Home'
                %>
                </a>
            </li>

            <% unless app_items.empty? %>
              <li class="nav-item">
                  <a
                      class="nav-link nav-menu-button"
                      href="/apps"
                  >
                      Web Suite
                  </a>
              </li>
            <% end %>
            <% unless config_pack_items.empty? %>
              <li class="nav-item">
                  <a
                      class="nav-link nav-menu-button"
                      href="/config-packs"
                  >
                      Config Packs
                  </a>
              </li>
            <% end %>
        </ul>
    </div>
</nav>
